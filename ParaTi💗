<script>
/* CONTADOR */
const inicio = new Date("2020-01-08T00:00:00");

function actualizarContador() {
    const ahora = new Date();
    let diff = ahora - inicio;

    let s = Math.floor(diff / 1000);
    let m = Math.floor(s / 60);
    let h = Math.floor(m / 60);
    let d = Math.floor(h / 24);

    h %= 24; m %= 60; s %= 60;

    document.getElementById("contador").innerHTML =
    `Mi amor por ti comenzó hace…<br>
     ${d} días ${h} horas ${m} minutos ${s} segundos`;
}

setInterval(actualizarContador, 1000);
actualizarContador();

/* LLUVIA DE CORAZONES */
const lluvia = document.getElementById("lluvia");

function crearCorazon() {
    const corazon = document.createElement("span");
    corazon.innerHTML = "❤️";
    corazon.style.left = Math.random() * 100 + "vw";
    corazon.style.animationDuration = (3 + Math.random() * 5) + "s";
    corazon.style.fontSize = (14 + Math.random() * 20) + "px";
    lluvia.appendChild(corazon);

    setTimeout(() => {
        corazon.remove();
    }, 8000);
}

setInterval(crearCorazon, 300);
</script>

